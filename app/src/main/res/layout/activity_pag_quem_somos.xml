<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".pag_quem_somos">

    <!-- Toolbar fixa no topo -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Conteúdo rolável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quem Somos"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Imagem da empresa -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/imgskincare2" />

            <!-- Texto principal -->
            <TextView
                android:id="@+id/texto_quem_somos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Somos uma empresa apaixonada por inovação e cuidados personalizados. Atuamos no setor de skincare, desenvolvendo soluções que combinam ciência, tecnologia e amor pela saúde da pele. Trabalhamos com farmácias de manipulação certificadas pela Anvisa, garantindo segurança e qualidade em todos os nossos produtos."
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Segunda imagem ilustrativa -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/imgskincare2" />

            <!-- Texto com valores -->
            <TextView
                android:id="@+id/texto_valores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nossos valores são: transparência, cuidado, compromisso com o bem-estar e foco total na experiência do cliente. Acreditamos que cada pessoa é única e, por isso, desenvolvemos tratamentos que se adaptam às necessidades individuais."
                android:textColor="#333333"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Rodapé -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 - Nome da Sua Empresa"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
